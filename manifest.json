{
  "manifest_version": 3,
  "name": "Sungrow iSolarCloud Monitor",
  "version": "1.0.2",
  "description": "Firefox addon for authorizing with Sungrow Developer API",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "https://*.isolarcloud.com/"
  ],
  "background": {
    "scripts": [
      "src/background.ts"
    ],
    "type": "module"
  },
  "action": {
    "default_title": "Sungrow iSolarCloud Monitor",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sungrow-isolarcloud-monitor@flynsarmy.com",
      "update_url": "https://raw.githubusercontent.com/Flynsarmy/browser-sungrow-isolarcloud-monitor-ext/master/updates.json"
    }
  }
}